// Generated by cicd-framework for 
// Language: Python 
// Framework: None
// Package Manager: 

pipeline {
    agent any

    environment {
        PYTHON_VERSION = ''
        VENV_PATH = 'venv'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                script {
                    // Store commit info for later
                    env.GIT_COMMIT_SHORT = sh(
                        script: "git rev-parse --short HEAD",
                        returnStdout: true
                    ).trim()
                }
            }
        }

        stage('Setup Environment') {
            steps {
                sh '''
                    echo "Setting up Python ${PYTHON_VERSION} environment..."
                    python${PYTHON_VERSION} -m venv ${VENV_PATH}
                    . ${VENV_PATH}/bin/activate
                    pip install --upgrade pip
                '''
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    
                }
            }
        }

        stage('Lint') {
            steps {
                sh '''
                    . ${VENV_PATH}/bin/activate
                    echo "Running linters..."

                    # Flake8 (style checker)
                    if pip freeze | grep -q flake8; then
                        echo "Running flake8..."
                        flake8 . --count --select=E9,F63,F7,F82 --show-source --statistics || true
                    fi

                    # Black (formatter check)
                    if pip freeze | grep -q black; then
                        echo "Checking code formatting..."
                        black --check . || true
                    fi

                    # MyPy (type checker)
                    if pip freeze | grep -q mypy; then
                        echo "Running type checker..."
                        mypy . || true
                    fi
                '''
            }
        }

        stage('Test') {
            steps {
                script {
                    
                }
            }
            post {
                always {
                    // Publish test results
                    junit 'test-results/*.xml'

                    // Publish coverage report
                    publishHTML(target: [
                        allowMissing: true,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'htmlcov',
                        reportFiles: 'index.html',
                        reportName: 'Coverage Report'
                    ])
                }
            }
        }

        stage('Security Scan') {
            steps {
                sh '''
                    . ${VENV_PATH}/bin/activate
                    echo "Running security scans..."

                    # Bandit (SAST - finds security issues in code)
                    if pip freeze | grep -q bandit; then
                        echo "Running Bandit security scan..."
                        bandit -r / -f json -o bandit-report.json || true
                    else
                        echo "Installing Bandit..."
                        pip install bandit
                        bandit -r / -f json -o bandit-report.json || true
                    fi

                    # Safety (checks dependencies for known vulnerabilities)
                    if pip freeze | grep -q safety; then
                        echo "Checking dependencies for vulnerabilities..."
                        safety check --json --output safety-report.json || true
                    else
                        echo "Installing Safety..."
                        pip install safety
                        safety check --json --output safety-report.json || true
                    fi
                '''
            }
        }

        

        stage('Docker Build') {
            steps {
                script {
                    def imageName = ":${env.GIT_COMMIT_SHORT}"
                    sh "docker build -t ${imageName} ."
                    echo "Built Docker image: ${imageName}"
                }
            }
        }
    }

    post {
        always {
            // Clean up
            sh 'rm -rf ${VENV_PATH}'
            cleanWs()
        }
        success {
            echo '✅ Pipeline completed successfully!'
        }
        failure {
            echo '❌ Pipeline failed!'
        }
    }
}