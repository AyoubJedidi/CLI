# Generated by cicd-framework
# Project: {{ project_name }}
# Base Image: {{ docker_base_image }}

FROM {{ docker_base_image }}

# Set working directory
WORKDIR /app

# Install system dependencies (if needed)
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first (Docker layer caching)
{% if has_requirements_txt %}
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt
{% endif %}

# Copy application code
COPY {{ app_module }}/ ./{{ app_module }}/

{% if framework == 'flask' %}
# Flask configuration
ENV FLASK_APP={{ app_module }}.main
ENV FLASK_ENV=production
CMD ["flask", "run", "--host=0.0.0.0", "--port={{ docker_port }}"]

{% elif framework == 'fastapi' %}
# FastAPI configuration
CMD ["uvicorn", "{{ app_module }}.main:app", "--host", "0.0.0.0", "--port", "{{ docker_port }}"]

{% elif framework == 'django' %}
# Django configuration
COPY manage.py .
RUN python manage.py collectstatic --noinput
CMD ["python", "manage.py", "runserver", "0.0.0.0:{{ docker_port }}"]

{% else %}
# Generic Python application
CMD ["python", "-m", "{{ app_module }}"]
{% endif %}

# Expose port
EXPOSE {{ docker_port }}

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:{{ docker_port }}/health')" || exit 1