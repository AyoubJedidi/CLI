// Generated by cicd-framework for {{ project_name }}
// Language: Python {{ python_version }}
// Framework: {{ framework }}
// Package Manager: {{ package_manager }}

pipeline {
    agent any

    environment {
        PYTHON_VERSION = '{{ python_version }}'
        VENV_PATH = 'venv'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                script {
                    // Store commit info for later
                    env.GIT_COMMIT_SHORT = sh(
                        script: "git rev-parse --short HEAD",
                        returnStdout: true
                    ).trim()
                }
            }
        }

        stage('Setup Environment') {
            steps {
                sh '''
                    echo "Setting up Python ${PYTHON_VERSION} environment..."
                    python${PYTHON_VERSION} -m venv ${VENV_PATH}
                    . ${VENV_PATH}/bin/activate
                    pip install --upgrade pip
                '''
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    {% if package_manager == 'pip' %}
                    sh '''
                        . ${VENV_PATH}/bin/activate
                        {% if has_requirements_txt %}
                        pip install -r requirements.txt
                        {% endif %}
                        {% if has_requirements_dev %}
                        pip install -r requirements-dev.txt
                        {% endif %}
                    '''
                    {% elif package_manager == 'poetry' %}
                    sh '''
                        pip install poetry
                        poetry install
                    '''
                    {% elif package_manager == 'pipenv' %}
                    sh '''
                        pip install pipenv
                        pipenv install --dev
                    '''
                    {% endif %}
                }
            }
        }

        stage('Lint') {
            steps {
                sh '''
                    . ${VENV_PATH}/bin/activate
                    echo "Running linters..."

                    # Flake8 (style checker)
                    if pip freeze | grep -q flake8; then
                        echo "Running flake8..."
                        flake8 . --count --select=E9,F63,F7,F82 --show-source --statistics || true
                    fi

                    # Black (formatter check)
                    if pip freeze | grep -q black; then
                        echo "Checking code formatting..."
                        black --check . || true
                    fi

                    # MyPy (type checker)
                    if pip freeze | grep -q mypy; then
                        echo "Running type checker..."
                        mypy . || true
                    fi
                '''
            }
        }

        stage('Test') {
            steps {
                script {
                    {% if test_framework == 'pytest' %}
                    sh '''
                        . ${VENV_PATH}/bin/activate
                        echo "Running tests with pytest..."
                        pytest tests/ \
                            --junitxml=test-results/junit.xml \
                            --cov={{ app_module }} \
                            --cov-report=xml:coverage.xml \
                            --cov-report=html:htmlcov \
                            --cov-report=term \
                            -v
                    '''
                    {% elif test_framework == 'unittest' %}
                    sh '''
                        . ${VENV_PATH}/bin/activate
                        echo "Running tests with unittest..."
                        python -m unittest discover tests/ -v
                    '''
                    {% endif %}
                }
            }
            post {
                always {
                    // Publish test results
                    junit 'test-results/*.xml'

                    // Publish coverage report
                    publishHTML(target: [
                        allowMissing: true,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'htmlcov',
                        reportFiles: 'index.html',
                        reportName: 'Coverage Report'
                    ])
                }
            }
        }

        stage('Security Scan') {
            steps {
                sh '''
                    . ${VENV_PATH}/bin/activate
                    echo "Running security scans..."

                    # Bandit (SAST - finds security issues in code)
                    if pip freeze | grep -q bandit; then
                        echo "Running Bandit security scan..."
                        bandit -r {{ app_module }}/ -f json -o bandit-report.json || true
                    else
                        echo "Installing Bandit..."
                        pip install bandit
                        bandit -r {{ app_module }}/ -f json -o bandit-report.json || true
                    fi

                    # Safety (checks dependencies for known vulnerabilities)
                    if pip freeze | grep -q safety; then
                        echo "Checking dependencies for vulnerabilities..."
                        safety check --json --output safety-report.json || true
                    else
                        echo "Installing Safety..."
                        pip install safety
                        safety check --json --output safety-report.json || true
                    fi
                '''
            }
        }

        {% if build_package %}
        stage('Build Package') {
            steps {
                sh '''
                    . ${VENV_PATH}/bin/activate
                    echo "Building distribution packages..."
                    pip install build
                    python -m build
                '''
            }
        }
        {% endif %}

        stage('Docker Build') {
            steps {
                script {
                    def imageName = "{{ project_name }}:${env.GIT_COMMIT_SHORT}"
                    sh "docker build -t ${imageName} ."
                    echo "Built Docker image: ${imageName}"
                }
            }
        }
    }

    post {
        always {
            // Clean up
            sh 'rm -rf ${VENV_PATH}'
            cleanWs()
        }
        success {
            echo '✅ Pipeline completed successfully!'
        }
        failure {
            echo '❌ Pipeline failed!'
        }
    }
}