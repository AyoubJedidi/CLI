name: CI/CD Pipeline

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main ]

jobs:
  test:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        python-version: ['{{ python_version }}']

    steps:
    - uses: actions/checkout@v4

    - name: Set up Python ${{ matrix.python-version }}
      uses: actions/setup-python@v5
      with:
        python-version: ${{ matrix.python-version }}
        cache: '{% if package_manager == "poetry" %}poetry{% else %}pip{% endif %}'

    {% if package_manager == 'poetry' %}
    - name: Install Poetry
      run: |
        curl -sSL https://install.python-poetry.org | python3 -
        echo "$HOME/.local/bin" >> $GITHUB_PATH

    - name: Install dependencies
      run: poetry install
    {% else %}
    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -r requirements.txt
        {% if has_tests %}pip install pytest pytest-cov{% endif %}
    {% endif %}

    - name: Lint with flake8
      run: |
        pip install flake8
        flake8 {{ project_name }} --count --select=E9,F63,F7,F82 --show-source --statistics

    {% if has_tests %}
    - name: Test with {{ test_framework }}
      run: |
        {% if package_manager == 'poetry' %}
        poetry run pytest tests/ --cov={{ project_name }} --cov-report=xml
        {% else %}
        pytest tests/ --cov={{ project_name }} --cov-report=xml
        {% endif %}

    - name: Upload coverage
      uses: codecov/codecov-action@v4
      with:
        file: ./coverage.xml
        fail_ci_if_error: false
    {% endif %}

  build:
    runs-on: ubuntu-latest
    needs: test
    if: github.event_name == 'push' && github.ref == 'refs/heads/main'

    steps:
    - uses: actions/checkout@v4

    - name: Set up Python
      uses: actions/setup-python@v5
      with:
        python-version: '{{ python_version }}'

    {% if package_manager == 'poetry' %}
    - name: Build with Poetry
      run: |
        pip install poetry
        poetry build
    {% else %}
    - name: Build package
      run: |
        pip install build
        python -m build
    {% endif %}

    - name: Upload artifacts
      uses: actions/upload-artifact@v4
      with:
        name: dist
        path: dist/
