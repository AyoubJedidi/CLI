stages:
  - test
  - build
  - deploy

variables:
  PYTHON_VERSION: "{{ python_version }}"
  PIP_CACHE_DIR: "$CI_PROJECT_DIR/.cache/pip"

cache:
  paths:
    - .cache/pip
    {% if package_manager == 'poetry' %}- .venv/{% endif %}

before_script:
  - python --version
  {% if package_manager == 'poetry' %}
  - pip install poetry
  - poetry install
  {% else %}
  - pip install -r requirements.txt
  {% endif %}

test:
  stage: test
  image: python:{{ python_version }}
  script:
    {% if test_framework == 'pytest' %}
    - pytest tests/ --cov={{ project_name }} --cov-report=xml --cov-report=term
    {% elif test_framework == 'unittest' %}
    - python -m unittest discover tests
    {% endif %}
  coverage: '/(?i)total.*? (100(?:\.0+)?\%|[1-9]?\d(?:\.\d+)?\%)$/'
  artifacts:
    reports:
      coverage_report:
        coverage_format: cobertura
        path: coverage.xml

lint:
  stage: test
  image: python:{{ python_version }}
  script:
    - pip install flake8 black
    - flake8 {{ project_name }}
    - black --check {{ project_name }}

build:
  stage: build
  image: python:{{ python_version }}
  script:
    {% if package_manager == 'poetry' %}
    - poetry build
    {% else %}
    - python setup.py sdist bdist_wheel
    {% endif %}
  artifacts:
    paths:
      - dist/
    expire_in: 1 week
  only:
    - main
    - tags
