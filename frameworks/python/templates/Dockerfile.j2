# Generated by cicd-framework
# Project: {{ project_name }}
FROM python:{{ python_version }}-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
{% if has_requirements_txt %}
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt
{% endif %}

# Copy application code
COPY . .

# Set Flask/FastAPI environment
{% if framework == 'flask' %}
ENV FLASK_APP={{ main_file }}
ENV FLASK_ENV=production
CMD ["flask", "run", "--host=0.0.0.0", "--port={{ docker_port }}"]

{% elif framework == 'fastapi' %}
CMD ["uvicorn", "{{ main_file.replace('.py', '') }}:app", "--host", "0.0.0.0", "--port", "{{ docker_port }}"]

{% else %}
CMD ["python", "{{ main_file }}"]
{% endif %}

EXPOSE {{ docker_port }}
