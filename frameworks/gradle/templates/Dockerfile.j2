# Build stage
FROM {{ docker_base_image }} AS build
WORKDIR /app

# Copy Gradle wrapper and build files
COPY gradle gradle
COPY gradlew {% if uses_kotlin_dsl %}build.gradle.kts settings.gradle.kts{% else %}build.gradle settings.gradle{% endif %} ./

# Download dependencies
RUN ./gradlew dependencies --no-daemon || true

# Copy source code
COPY src ./src

# Build application
{% if packaging == 'war' %}
RUN ./gradlew bootWar -x test --no-daemon
{% else %}
RUN ./gradlew bootJar -x test --no-daemon
{% endif %}

# Runtime stage
FROM {{ docker_runtime_image }}
WORKDIR /app

# Copy artifact from build stage
COPY --from=build /app/build/libs/*.{{ packaging }} app.{{ packaging }}

EXPOSE {{ docker_port }}

{% if packaging == 'war' %}
ENTRYPOINT ["java", "-jar", "app.war"]
{% else %}
ENTRYPOINT ["java", "-jar", "app.jar"]
{% endif %}