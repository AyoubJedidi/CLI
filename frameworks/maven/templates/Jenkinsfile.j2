pipeline {
    agent any

    tools {
        jdk 'JDK-{{ java_version }}'
        maven 'Maven-3.9'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        {% if is_multi_module %}
        stage('Build All Modules') {
            steps {
                sh 'mvn clean install -DskipTests'
            }
        }
        {% else %}
        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }
        {% endif %}

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package -DskipTests'
            }
        }

        stage('Docker Build') {
            steps {
                sh 'docker build -t {{ project_name }}:latest .'
            }
        }
    }

    post {
        always {
            junit '**/target/surefire-reports/*.xml'
        }
        success {
            archiveArtifacts artifacts: '**/target/*.{{ packaging }}', fingerprint: true
        }
    }
}